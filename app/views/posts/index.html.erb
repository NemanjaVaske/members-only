<h1>Posts</h1>
    
      
        <% @posts.each do |post| %>
        <div class="post-container">
        <div class="post-username"><%= post.user.username %></div>
        <div class="post-content"><%= post.body %></div>
        <div class="post-options">
          <% if user_signed_in?%>
              <%= link_to 'Show', post, class: "post-option" %>
              <%if current_user.id == post.user_id%>
              <%= link_to 'Edit', edit_post_path(post), class: "post-option" %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class: "post-option" %>
            <%end%>
          <%end%>
        </div>
        </div>
        <%end%>
      

<br>

